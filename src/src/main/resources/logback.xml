<?xml version="1.0" encoding="UTF-8"?>

<configuration debug="true" scan="true" scanPeriod="60 seconds">
	<!--定义日志文件的存储地址 勿在 LogBack 的配置中使用相对路径-->
	<property name="log.path" value="/home/logs/dts"/>
	<!-- 文件历史数 -->
	<property name="maxHistory" value="6"/>

	<contextName>dts</contextName>
	<appender name="stdout" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%p] [%c{0}] %m%n</pattern>
			<charset>UTF-8</charset>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!--日志文件输出的文件名-->
			<fileNamePattern>${log.path}/stdout.log.%d{yyyy-MM-dd}
			</fileNamePattern>
			<maxHistory>${maxHistory}</maxHistory>
		</rollingPolicy>
	</appender>

	<appender name="stdout" class="ch.qos.logback.classic.AsyncAppender">
		<appender-ref ref="stdout" />
	</appender>

    <!-- core package包下的所有日志都打印到控制台和core appender下 -->
    <logger name="com.mao" level="info" additivity="false">
        <appender-ref ref="stdout" />
    </logger>    

    <logger name="org.springframework" level="error"/>

	<!-- 日志输出级别 -->
	<root level="info">
		<appender-ref ref="stdout"/>
	</root>

</configuration>

